<!DOCTYPE html>
<html>
    <head>
        <title>Administration</title>
        <style type="text/css">
       .border { 
        padding: 5px;
        margin-bottom: 10px;
        border: solid 1px black; 
       }
  </style> 
    </head>
    <body>
        <h1>Список пользователей</h1>
        {% for user in users %}
        <div  class="border">
            <form action='/administration/{{ adminId }}/change_user_name/{{ user.userId }}' method="post">
                <p><b>Username:</b><br>
                <input type="text" name="userName" size="40" value="{{user.userName}}">
                <p><input type="submit" value="update username"></p>
            </form>
                <p><b>Login:</b><br>
                <input type="text" size="40" value="{{user.login}}"></p>
            <form action="/administration/{{ adminId }}/change_password/{{ user.userId }}" method="post">
                <p><b>Password:</b><br>
                <input type="text" name="password" size="40" ></p>
                <p><input type="submit" value="change password"></p>
            </form>
            <form action="/administration/{{ adminId }}/delete_user/{{ user.userId }}" method="post">
                <p><input type="submit" value="delete user"></p>
            </form>
        </div>
        {% endfor %}

        <details>
            <summary>Новый пользователь</summary>
            <div class="border">
                <form name="new_user" action="/administration/{{ adminId }}/new_user" method="post">
                    <p><b>Username:</b><br>
                    <input type="text" name="userName" size="40">
                    <p><b>LoginName:</b></p>
                    <input type="text" name="login" size="40">
                    <p><b>Password:</b><br>
                    <input type="text" name="password" size="40" ></p>
                    <p><input type="submit" value="add new user">
                </form>
            </div>
        </details>
    </body>
</html>